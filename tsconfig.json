{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
}