---
import { SITE } from "src/config";
import Layout from "@layouts/Layout.astro";
import LinkButton from "@components/LinkButton.astro";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <div class="not-found-wrapper">
    <div class="not-found-inner">
      <h1 aria-label="404 Not Found">404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p>Page Not Found</p>
      <LinkButton
        href="/"
        className="my-6 underline decoration-dashed underline-offset-8 text-lg"
      >
        Go back home
      </LinkButton>
    </div>
  </div>
</Layout>

<style>
  .not-found-wrapper {
    height: 100vh;
    grid-column: 1/-1;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: repeat(12, 1fr);
  }
  .not-found-wrapper h1 {
    @apply font-bold text-9xl text-accent;
  }
  .not-found-wrapper p {
    @apply text-2xl sm:text-3xl mt-4;
  }

  .not-found-inner {
    grid-column: 4 / 10;
    grid-row: 4 / 10;
    align-items: center;
    justify-content: center;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
  }
</style>
