---
import Breadcrumbs from "@components/Breadcrumbs.astro";
import { Colorful } from "@components/Home/Colorful";
import { PageHero } from "@components/PageHero";

export interface Props {
  pageTitle: string;
  pageDesc?: string;
}

const { pageTitle, pageDesc } = Astro.props;
---

<main id="main-content">
  <PageHero title={pageTitle} subTitle={pageDesc || ""} />
  <Colorful />
  <slot />
</main>

<style>
  #main-content {
    @apply max-w-full mx-auto px-5 pb-36 w-full sm:px-6 md:px-16;
  }
  #main-content h1 {
    @apply font-semibold text-2xl sm:text-3xl;
  }
  #main-content p {
    @apply mt-2 mb-6 italic;
  }
</style>
